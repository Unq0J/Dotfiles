# Guess the weather hourly
[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

[battery]
command=~/.config/i3blocks/battery.sh
interval=30
color=#24C940

[thunarlaucher]
full_text=thunar
command=thunar 

[time]
command=date +%T
interval=1




